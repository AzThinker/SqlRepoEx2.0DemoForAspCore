@using Webdiyer.WebControls.AspNetCore;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper "*,Webdiyer.WebControls.MvcPager"
@using DemoTools.BLL.DemoNorthwind
@model AzOrdersList

<div style="clear: both;"></div>
<div id="azordersTargetId">
    <table>
        <tr>
            <th colspan=" 15 " class="table - title">
                订单
            </th>
        </tr>
        <tr>
            <th>OrderID_simpCN</th>
            <th>CustomerID_simpCN</th>
            <th>EmployeeID_simpCN</th>
            <th>OrderDate_simpCN</th>
            <th>RequiredDate_simpCN</th>
            <th>ShippedDate_simpCN</th>
            <th>ShipVia_simpCN</th>
            <th>Freight_simpCN</th>
            <th>ShipName_simpCN</th>
            <th>ShipAddress_simpCN</th>
            <th>ShipCity_simpCN</th>
            <th>ShipRegion_simpCN</th>
            <th>ShipPostalCode_simpCN</th>
            <th>ShipCountry_simpCN</th>
            <th>操作</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.OrderID)</td>
                <td> @Html.DisplayFor(modelItem => item.CustomerID)</td>
                <td> @Html.DisplayFor(modelItem => item.EmployeeID)</td>
                <td> @Html.DisplayFor(modelItem => item.OrderDate)</td>
                <td> @Html.DisplayFor(modelItem => item.RequiredDate)</td>
                <td> @Html.DisplayFor(modelItem => item.ShippedDate)</td>
                <td> @Html.DisplayFor(modelItem => item.ShipVia)</td>
                <td> @Html.DisplayFor(modelItem => item.Freight)</td>
                <td> @Html.DisplayFor(modelItem => item.ShipName)</td>
                <td> @Html.DisplayFor(modelItem => item.ShipAddress)</td>
                <td> @Html.DisplayFor(modelItem => item.ShipCity)</td>
                <td> @Html.DisplayFor(modelItem => item.ShipRegion)</td>
                <td> @Html.DisplayFor(modelItem => item.ShipPostalCode)</td>
                <td> @Html.DisplayFor(modelItem => item.ShipCountry)</td>
                <td>
                    @Html.ActionLink("增加", "Create", new { Id = item.OrderID })
                    @Html.ActionLink("删除", "Delete", new { Id = item.OrderID })
                    @Html.ActionLink("编辑", "Edit", new { Id = item.OrderID })
                    @Html.ActionLink("明细", "Details", new { Id = item.OrderID })
                </td>


            </tr>

        }
    </table>
</div>
<mvcpager asp-model="@Model" ajax-enabled="true" ajax-update-target="azordersTargetId"></mvcpager>